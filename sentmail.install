<?php

/**
 * Implements hook_schema().
 *
 * @ingroup sentmail
 */
function sentmail_schema() {
  $schema = array();

  // The name of the table can be any name we choose. However, namespacing the
  // table with the module name is best practice.
  $schema['sentmail'] = array(
    'description' => 'The base table for our sentmail entity.',
    'fields' => array(
      'sentmail_id' => array(
        'description' => 'Primary key of the sentmail entity.',
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'created' => array(
        'description' => 'The Unix timestamp of the entity creation time.',
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ),
      'message' => array(
        'description' => 'The contents of the sent mail.',
        'type' => 'blob',
        'size' => 'normal',
        'not null' => FALSE,
      ),
      'verifykey' => array(
        'description' => 'The unique key used to verify email.',
        'type' => 'varchar',
        'length' => 64,
      ),
      'verifykey_status' => array(
        'description' => 'The status of the verifykey.',
        'type' => 'varchar',
        'length' => 64,
        'default' => 'active',
      ),
    ),
    'primary key' => array('sentmail_id'),
  );

  return $schema;
}
